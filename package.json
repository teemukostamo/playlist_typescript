{
  "name": "playlist_typescript_backend",
  "version": "1.0.0",
  "engines": {
    "node": "12.x"
  },
  "description": "Typescript refactor of playlist app.",
  "main": "backend/build/index",
  "scripts": {
    "build": "tsc && cd backend && cp -r playlog ./build && cd build && mkdir transfers && npm run build:ui",
    "build:ui": "cd frontend && npm install && npm run build",
    "deploy": "git push heroku master",
    "deploy:full": "npm run tsc && npm run build:ui && git add . && git commit -m uibuild && git push -u origin master && npm run deploy",
    "dev": "cross-env NODE_ENV=development ts-node-dev ./backend/index.ts",
    "lint": "eslint --ext .ts .",
    "start": "cross-env NODE_ENV=production node ./backend/build/index.js",
    "start:test": "cross-env NODE_ENV=test node ./backend/build/index.js",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand --detectOpenHandles --testPathIgnorePatterns=frontend/cypress/integration/examples",
    "tsc": "tsc"
  },
  "author": "Teemu Kostamo",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/bluebird": "^3.5.30",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.3",
    "@types/iconv-lite": "0.0.1",
    "@types/jest": "^25.2.1",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/mysql": "^2.15.15",
    "@types/node": "^13.9.8",
    "@types/sequelize": "^4.28.8",
    "@types/supertest": "^2.0.8",
    "@types/validator": "^12.0.1",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-plugin-cypress": "^2.10.3",
    "eslint-plugin-jest": "^23.8.2",
    "jest": "^24.9.0",
    "supertest": "^4.0.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "iconv-lite": "^0.5.1",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "mysql": "^2.18.1",
    "mysql2": "^2.1.0",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.21.5",
    "sequelize-typescript": "^1.1.0",
    "ts-jest": "^25.3.1",
    "windows-1252": "^1.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  }
}
